@{
    ViewData["Title"] = "About Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
        }

        .section-header {
            margin-top: 50px;
            font-weight: 500;
            color: #2c3e50;
        }

        .section-content {
            margin-top: 20px;
            font-size: 1.1rem;
            color: #34495e;
        }

        .about-card {
            background-color: #fff;
            border: 1px solid #ddd;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .list-group-item {
            font-size: 1.1rem;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="text-center">
            <h1 class="section-header">@ViewData["Title"]</h1>
            <p class="section-content">Welcome to the Movie Ticket Booking System! Learn more about our services here.</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="about-card">
                    <h4>About Us</h4>
                    <p>We are a leading platform for booking movie tickets online, offering an easy, seamless, and fast way to purchase tickets for all major cinemas. From the latest blockbusters to classic films, we help you get the best seats at your favorite theaters.</p>
                    <p>Our services include:</p>
                    <ul class="list-group">
                        <li class="list-group-item">Fast, secure, and reliable movie ticket booking</li>
                        <li class="list-group-item">Exclusive offers and discounts</li>
                        <li class="list-group-item">Easy-to-use interface for users of all ages</li>
                        <li class="list-group-item">Real-time updates on movie showtimes</li>
                        <li class="list-group-item">Seamless payment options</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
