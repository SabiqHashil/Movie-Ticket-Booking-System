@{
    ViewData["Title"] = "Admin Dashboard";
    var username = TempData["Username"] ?? "No User";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <p class="lead">Welcome to the Admin Dashboard! Manage the system effectively from here.</p>
    </div>
    <!-- Cards for Key Admin Modules -->
    <div class="row mt-4">
        <!-- Manage Movies -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Movies</h5>
                    <p class="card-text">Add, edit, or delete movies in the system.</p>
                    <a href="/Admin/Movies" class="btn btn-primary">Movies</a>
                </div>
            </div>
        </div>
        <!-- Manage Theaters -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Theaters</h5>
                    <p class="card-text">Add or update theaters and their details.</p>
                    <a href="/Admin/Theaters" class="btn btn-secondary">Theaters</a>
                </div>
            </div>
        </div>
        <!-- Configure Schedules -->
        <div class="col-md-3"> 
             <div class="card shadow-sm"> 
                 <div class="card-body text-center"> 
                     <h5 class="card-title">Manage Schedules</h5> 
                     <p class="card-text">Set up and modify movie schedules.</p> 
                     <a href="/Admin/Schedules" class="btn btn-success">Schedules</a> 
                 </div> 
             </div> 
         </div>
        <!-- Booking History -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Booking History</h5>
                    <p class="card-text">Users Booking Histories</p>
                    <a href="/Admin/BookingHistory" class="btn btn-warning">Bookings</a>
                </div>
            </div>
        </div>
</div>
<script>
        // Retrieve the username from Razor
        const username = '@username';
        // Save the username into localStorage as 'userSession'
        if (username) {
            localStorage.setItem('userSession', username);
            console.log('User session stored in localStorage:', username);
        }
</script>
