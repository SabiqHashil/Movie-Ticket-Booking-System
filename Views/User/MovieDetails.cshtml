@model MovieTicketBookingSystem.Models.Movie

@{
    ViewData["Title"] = @Model.MovieName;
}

<div class="container mt-5">
    <div class="text-center">
        <h1>@Model.MovieName</h1>

        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="data:image/jpeg;base64,@Model.Image" class="img-fluid" alt="@Model.MovieName" style="max-height: 400px; object-fit: cover;" />
        }
        else
        {
            <img src="~/images/movie_placeholder.jpg" class="img-fluid" alt="@Model.MovieName" />
        }

        <!-- Movie Details -->
        <p><strong>Genre:</strong> @Model.Genre</p>
        <p><strong>Duration:</strong> @Model.Duration minutes</p>
        <p><strong>Language:</strong> @Model.Language</p>
        <p><strong>Description:</strong> @Model.Description</p>

        <!-- Buttons to Book or Go Back -->
        <div class="mt-4">
            <a href="@Url.Action("Dashboard", "User")" class="btn btn-secondary">Back to Home</a>
            <a href="@Url.Action("BookTicket", "User", new { movieId = Model.MovieID })" class="btn btn-primary">Book Now</a>
        </div>
    </div>
</div>
