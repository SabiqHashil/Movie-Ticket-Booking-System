@model MovieTicketBookingSystem.Models.PaymentTicket

<div class="container">
    <h2>Booking Confirmation</h2>
    <div class="card">
        <div class="card-header">
            <h5>Booking Details</h5>
        </div>
        <div class="card-body">
            <p><strong>Ticket Number:</strong> @(ViewBag.TicketNumber ?? "Not generated")</p>
            <p><strong>Movie Name:</strong> @Model.MovieName</p>
            <p><strong>Theater Name:</strong> @Model.TheaterName</p>
            <p><strong>Location:</strong> @Model.Location</p>
            <p><strong>Seat Class:</strong> @Model.SeatClass</p>
            <p><strong>Number of Seats:</strong> @Model.NumberOfSeats</p>
            <p><strong>Total Price (with GST):</strong>₹ @Model.TotalPriceWithGST</p>
        </div>
        <div class="card-footer">
            <!-- Back to User Dashboard button -->
            <a href="@Url.Action("Dashboard", "User")" class="btn btn-secondary">Back to Dashboard</a>
        </div>
    </div>
</div>
<!-- Bootstrap 5 JS (Ensure it's included) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
